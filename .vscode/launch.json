{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CEIS Backend",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/clab_ceis/ceis_backend/.venv/bin/python",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host", "0.0.0.0",
                "--port", "8052",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/clab_ceis/ceis_backend",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "CEIS Dashboard (with Backend)",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/clab_ceis/ceis_dashboard/.venv/bin/python",
            "program": "${workspaceFolder}/clab_ceis/ceis_dashboard/main.py",
            "cwd": "${workspaceFolder}/clab_ceis/ceis_dashboard",
            "console": "integratedTerminal",
            "justMyCode": false,
            "preLaunchTask": "Start CEIS Backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "CEIS Dashboard (standalone)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/clab_ceis/ceis_dashboard/main.py",
            "python": "${workspaceFolder}/clab_ceis/ceis_dashboard/.venv/bin/python",
            "cwd": "${workspaceFolder}/clab_ceis/ceis_dashboard",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Shop",
            "type": "debugpy",
            "request": "launch",
            "module": "clab_ceis.shop.shop",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}